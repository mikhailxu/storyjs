!!!XML
!!!5
%html
  %head
    - @inline_javascript = false
    - %w[ jquery-1.5.1 jquery-1.5.1-hack json2 ].each do |js|
      - if @inline_javascript
        :javascript
          #{File.new("public/javascripts/#{js}.js").read}
      - else
        %script{:src=>"/javascripts/#{js}.js", :type=>'text/javascript'}
    - %w[ layer story_core story mvc template ].each do |js|
      - if @inline_javascript
        :javascript
          #{File.new("public/javascripts/story/#{js}.js").read}
      - else
        %script{:src=>"/javascripts/story/#{js}.js", :type=>'text/javascript'}
    = yield :head
    %style{:type=>'text/css'}
      = yield :style
  %body
    #template{:style=>'display:none'}
      = yield :template
    = yield
  %script{:type=>'text/javascript'}
    :plain
      _layer.linkClasses();
    = yield :script
    :plain
      _layer.linkClasses();

- uses :litijs


- content_for :title do
  Litijs Documentation

- content_for :script do
  :plain 
    var file = ({
      litijs: 'javascripts/litijs.js',
      template: 'javascripts/story/template.js',
      plot: 'javascripts/story/plot.js',
      story: 'javascripts/story/story.js',
      layer: 'javascripts/story/layer.js',
    })[window.location.search.slice(1)] || 'javascripts/story/story.js';
    
    Litijs($('body'), file, function() {
      if(window.location.hash) {
        var element = document.getElementById('litijs.' + window.location.hash.slice(1));
        if(element) {
          window.scrollTo(0, $(element).offset().top);
        } else debugger;
      }
    });
